<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td><img style="height: 70px" src="/productImages/{{this._id}}.jpg" alt="{{this.Name}}"></td>
                    <td>{{this.Name}}</td>
                    <td>
                        <button class="cart-item-count mr-3">-</button>x
                        <button class="cart-item-count mr-3">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>