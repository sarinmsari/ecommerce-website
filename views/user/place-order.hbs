<section>
    <div class="container mt-4">
        <form action="" id="checkout-form">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="text-center">Delivery Address</h2>
                    <form action="/placeOrder" method="POST">
                        <label for="phone">Phone</label>
                        <input type="number" name="phone" class="form-control">

                        <label for="">Address</label>
                        <textarea name="address" class="form-control"></textarea>

                        <label for="pincode">Pin code</label>
                        <input type="number" name="pincode" class="form-control">

                        <input type="text" name="userId" id="" value="{{user._id}}" hidden>

                    </form>
                </div>
                <div class="col-md-6">
                    <h2 class="text-center">Summary</h2>
                    <div class="card mt-4">
                        <div class="mt-3 mb-3">
                            <h5 class="text-center">Total: {{total}} INR</h5>
                            <hr>
                            <div class="ml-5">
                                <h5>Payment mode</h5>
                                <input type="radio" id="cod" name="payment-method" value="cod">
                                <label for="cod">COD</label><br>
                                <input type="radio" id="onlinepay" name="payment-method" value="onlinepay">
                                <label for="onlinepay">Pay now</label>
                            </div>
                            <center>
                                <button type="submit" class=" btn btn-primary">Checkout</button>
                            </center>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<script>
    $("#checkout-form").submit((e)=>{
        e.preventDefault()
        $.ajax({
            url:'/place-order',
            method:'post',
            data:$('#checkout-form').serialize(),
            success:(response)=>{
                alert("Order placed")
                if(response.status){
                    location.href='/';
                }
            }
        })
    })
</script>
